@model ALS.Models.Ad.AdDeletingModel

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="well">
        <h2>Delete Ad</h2>
        @using (Html.BeginForm("Delete", "Ad", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Category, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Category, new { @class = "form-control", @readonly = "readonly", @rows = "7" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Price, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @readonly = "readonly", @rows = "7" })
                </div>
            </div>
                foreach (var picture in Model.Pictures)
                {
                    <div class="form-group">
                        <div class="com-sm-4">
                              <img style="display:block;margin-left:auto;margin-right:auto;" width="100" src="@picture.FilePath"/>
                        </div>
                    </div>
                }

            <div class="form-group">
                <div class="com-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "Index", "Ad", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
</div>
