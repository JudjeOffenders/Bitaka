@model ALS.Models.Ad.AdDetailsModel

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <article>
        <header>
            <h2>
                @Model.Title
            </h2>
        </header>
        <p>
            @Model.Category
        </p>
        <p>
            @Model.City
        </p>
        <p>
            @Model.Content
        </p>
        <p>
            @Model.Price
        </p>
        <p>
            @Model.DateAdded
        </p>
        @foreach (var picture in Model.Pictures)
        {
            <div>
                <img src="@picture.FilePath" , width="100" , class="img-responsive"/>
            </div>
        }
        <p>
            @Model.Contact
        </p>
        <footer class="pull-right">
            @if (User.IsInRole("Admin") || Model.IsAuthor(User.Identity.Name))
            {
                @Html.ActionLink("Edit", "Edit", "Ad", new { @id = Model.Id }, new { @class = "btn btn-success btn-lg" })
                @Html.ActionLink("Delete", "Delete", "Ad", new { @id = Model.Id }, new { @class = "btn btn-danger btn-lg" })
            }
                <a href="@Request.UrlReferrer" class="btn btn-default btn-sm" title="Back to list">Back</a>
        </footer>
    </article>
</div>
<hr />




