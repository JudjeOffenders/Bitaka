@model List<ALS.Models.Ad.AdListingModel>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        @foreach (var ad in Model)
        {
            <div class="col-sm-6">
                <article>
                    <header>
                        <h2>
                            @Html.ActionLink(@ad.Title, "Details", "Ad", new { @id = ad.Id }, null)
                        </h2>
                    </header>
                    <p>
                        @ad.Price
                        @ad.Category
                        <div>
                            <img src="@ad.MainPicture.FilePath" , width="100" , height="100" , class="img-responsive" />
                           
                        </div>
                    </p>
                </article>
            </div>
        }
    </div>
</div>
<hr />
