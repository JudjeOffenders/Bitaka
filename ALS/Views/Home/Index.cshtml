@model IEnumerable<ALS.Models.Ad.AdListingModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2 class="text-center">Bit@ka best site for selling and buying</h2>
    <p class="lead text-center">You need more, here you take more!</p>
    <p class="text-center">
        <a href="/Ad/Create" class="btn btn-primary btn-lg">Create Ad </a>
        <a href="/Ad/List" class="btn btn-primary btn-lg">All Ads </a>
    </p>
</div>

<div class="row">
    @foreach (var ad in Model)
    {
        <div class="col-md-4">
            <h2>@ad.Title</h2>
            <h4>Price: @ad.Price</h4>
            <p>
                <img src="@ad.MainPicture.FilePath" , class="img-responsive" />
            </p>
            <p><a class="btn btn-default" href="/Ads/Details/@ad.Id">Details</a></p>
        </div>
    }
</div>
